{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "declaration": true,
    "allowJs": false,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2015"
    ],
    "sourceMap": true,
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": true,
    "emitDecoratorMetadata": true,
  },
  "include": [
    "src/**/*"
  ]
}